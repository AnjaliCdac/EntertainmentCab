<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <VideoView
            android:id="@+id/video_view_music"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_play_music"
            android:layout_width="@dimen/button_play_width"
            android:layout_height="@dimen/button_play_height"
            android:layout_below="@+id/video_view_music"
            android:textSize="@dimen/button_text_size"
            android:text="Play" />

        <Button
            android:id="@+id/button_pause_music"
            android:layout_width="@dimen/button_play_width"
            android:layout_height="@dimen/button_play_height"
            android:layout_below="@+id/video_view_music"
            android:textSize="@dimen/button_text_size"
            android:text="Pause" />
    </LinearLayout>
    </LinearLayout>